  body
    .header
      img.logo(src="img/logo.png", alt="")
      .wrapper
        nav.menu
          .menu__left
            .menu__item
              a.menu__item-link(href="#sets") Готовые наборы
            .menu__item
              a.menu__item-link(href="#locomotives") Подарочные локомотивы
          .menu__right
            .menu__item
